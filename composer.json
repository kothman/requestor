{
    "name": "kothman/requestor",
    "description": "A request management system",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Kothman\\Requestor\\": ["src/", "tests/"]
        }
    },
    "authors": [
        {
            "name": "Morgan Kothman",
            "email": "abkothman@gmail.com"
        }
    ],
    "require": {
        "doctrine/orm": "^3",
        "doctrine/dbal": "^4",
        "symfony/cache": "^7",
        "symfony/dotenv": "^7.1",
        "symfony/console": "^7.1",
        "twig/twig": "^3.0",
        "symfony/http-foundation": "^7.1",
        "symfony/form": "^7.1",
        "symfony/twig-bridge": "^7.1",
        "symfony/security": "^2.0",
        "symfony/security-csrf": "^7.1",
        "symfony/routing": "^7.1",
        "symfony/error-handler": "^7.1",
        "symfony/http-client": "^7.1"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.60",
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^1.11"
    },
    "scripts": {
	"test": "phpunit --bootstrap tests/bootstrap.php tests/",
	"build": "bin/sass resources/scss/styles.scss public/styles.css",
	"watch": "bin/sass --watch resources/scss/styles.scss public/styles.css"
    }
}
